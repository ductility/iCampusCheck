{
    "manifest_version": 2,
   
    "name": "iCampus Check Plus",
    "description": "Upgraded version of iCampus Check",
    "version": "0.1.2",

    "content_scripts": [
      {
        "matches": [
          "*://canvas.skku.edu/*"
        ],
        "js": ["content.js", "jquery-3.5.0.min.js"]
      }
    ],

    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
   
    "page_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "icons": {
      "128": "icon.png"
    },
    "content_security_policy": "script-src 'self' https://canvas.skku.edu/; object-src 'self'",
    "permissions": [
      "activeTab", "tabs", "declarativeContent","notifications", "storage", "http://*/", "https://*/"
    ]
  }